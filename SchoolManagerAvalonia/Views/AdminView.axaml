<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SchoolManagerViewModel;assembly=SchoolManagerViewModel"
             xmlns:converters="clr-namespace:SchoolManagerAvalonia.Converters"
             xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SchoolManagerAvalonia.Views.AdminView"
             x:DataType="vm:NavViewModel">

	<Design.DataContext >
		<vm:NavViewModel />
	</Design.DataContext>

	<UserControl.Resources>
		<x:String x:Key="PersonRegular">PersonRegular</x:String>
		<x:String x:Key="LogoutIcon">Logout</x:String>
	</UserControl.Resources>

	<Grid RowDefinitions="Auto, *">
		<Button HorizontalAlignment="Left"
		        Width="32"
		        Height="32"
		        Margin="7 10"
		        Command="{Binding TriggerPaneCommand}"
		        Grid.Row="0"
		        >
			<PathIcon Height="11" Data="{StaticResource LineHorizontal3Regular}" />
		</Button>
		
		<SplitView IsPaneOpen="{Binding IsPaneOpen}"
		           CompactPaneLength="{Binding CollapsedNavbarWidth}"
		           DisplayMode="CompactInline"
		           OpenPaneLength="200"
		           Background="#1e1e1e"
		           PaneBackground="#1e1e1e"
		           Grid.Row="1"
		           >
			<SplitView.Pane>
				<!-- Container for navigation items and logout button -->
				<Grid RowDefinitions="Auto,*,Auto">

					<!-- Navigation Items -->
					<StackPanel Orientation="Vertical"
                                Spacing="5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Grid.Row="0">
						<ListBox Margin="2 0 -100 0" Padding="0" ItemsSource="{Binding Items}"
                                 SelectedItem="{Binding SelectedListItem}">
							<ListBox.Styles>
								<Style Selector="ListBoxItem">
									<Setter Property="Padding" Value="12 8"></Setter>
								</Style>
							</ListBox.Styles>
							<ListBox.ItemTemplate>
								<DataTemplate DataType="{x:Type vm:ListItemTemplate}">
									<StackPanel Spacing="17" Orientation="Horizontal">
										<PathIcon Data="{Binding IconKey, Converter={x:Static converters:TypeConverters.IconConverter}}"
                                                  Width="14" />
										<TextBlock Text="{Binding Label}" />
									</StackPanel>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</StackPanel>

					<!-- Logout Button -->
					<StackPanel Orientation="Vertical"
                                Spacing="5"
                                VerticalAlignment="Bottom"
                                Grid.Row="2">
						<Grid Margin="2 0 -100 12" RowDefinitions="auto,auto">
							<StackPanel Spacing="17" Orientation="Horizontal" Margin="12 8">
								<PathIcon Data="{Binding Source={StaticResource PersonRegular}, Converter={x:Static converters:TypeConverters.IconConverter}}"
										  Width="14" />
								<TextBlock Text="User" />
							</StackPanel>

							<Button Grid.Row="1" Command="{Binding TriggerLogoutCommand}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" >
								<!--<Button.Styles>
									<Style Selector="Text">
										<Setter Property="Padding" Value="12 8"></Setter>
									</Style>
								</Button.Styles>-->
								<Button.Content>
									<StackPanel Spacing="17" Orientation="Horizontal" HorizontalAlignment="Left">
										<PathIcon Data="{Binding Source={StaticResource LogoutIcon}, Converter={x:Static converters:TypeConverters.IconConverter}}"
												  Width="14"/>
										<TextBlock Text="Logout"/>
									</StackPanel>
								</Button.Content>

							</Button>


							<!--<StackPanel Spacing="17" Orientation="Horizontal" Grid.Row="1" Margin="12 8">
								<PathIcon Data="{Binding Source={StaticResource LogoutIcon}, Converter={x:Static converters:TypeConverters.IconConverter}}"
										  Width="14" />
								<TextBlock Text="Logout" />
							</StackPanel>-->
						</Grid>
					</StackPanel>
				</Grid>
			</SplitView.Pane>

			<SplitView.Content>
				<Border CornerRadius="12 0 0 0"
                        Background="#2d2d2d" Padding="30">
					<TransitioningContentControl Content="{Binding CurrentPage}" />
				</Border>
			</SplitView.Content>
		</SplitView>
	</Grid>
</UserControl>
